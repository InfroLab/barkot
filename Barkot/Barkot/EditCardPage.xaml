<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Barkot.EditCardPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Edit card"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" FontSize="Large" />
            <Label Text="Company name"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Start" FontSize="Medium" />
            <Entry x:Name="Company" Text="{Binding Company}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Start" FontSize="Medium" />
            <Label Text="Card number"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Start" FontSize="Medium" />
            <Entry x:Name="Barcode" Text="{Binding Barcode}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Start" FontSize="Medium" />
            <Button x:Name="EditCardPageBackButton" Text="Back" FontSize="Medium" Clicked="NavigateFromEditCardPage"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>